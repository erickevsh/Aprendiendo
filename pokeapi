import requests  #Para ejecutar pip install pillow
from PIL import Image
from io import BytesIO

base_url = "https://pokeapi.co/api/v2/"

def get_pokemon_info(name):
    # Usa el nombre recibido, no pidas input aqu√≠
    url = f"{base_url}/pokemon/{name}"
    response = requests.get(url)

    if response.status_code == 200:
        return response.json()
    else:
        print(f"Failed to retrieve data {response.status_code}")
        return None

pokemon_name = input("Escribe un nombre de un pokemon: ")
pokemon_info = get_pokemon_info(pokemon_name)

if pokemon_info:
    print(f"Sprite URL: {pokemon_info['sprites']['front_default']}")
    print(f"Name: {pokemon_info['name']}")
    print(f"Id: {pokemon_info['id']}")
    print(f"Height: {pokemon_info['height']}")
    print(f"Weight: {pokemon_info['weight']}")

    sprite_url = pokemon_info['sprites']['front_default']
    if sprite_url:
        sprite_response = requests.get(sprite_url)
        img = Image.open(BytesIO(sprite_response.content))
        img.show()
